{
    "swagger": "2.0",
    "info": {
        "description": "gcptrack backend is responsible for providing data to the frontend and authentication.",
        "version": "1.0.0",
        "title": "gcptrack App Server",
        "contact": {
            "email": "osamabinjunaid36@gmail.com"
        }
    },
    "host": "localhost:7686",
    "basePath": "/",
    "tags": [
        {
            "name": "Institute",
            "description": "Instution routes are restricted to facilitator. The APIs in this path will allow the facilitator to link a google sheet add / update institution details, and disable the institution account."
        },
        {
            "name": "Viewer",
            "description": "Viewer routes will be accessed by anyone using the react frontend. The APIs in this path will provide data for dashboard and participants profile."
        },
        {
            "name": "Facilitator",
            "description": "Facilitator routes are restricted to facilitator. The APIs in this path will allow the facilitator signin and change its profile."
        },
        {
            "name": "Job",
            "description": "Job routes are restricted to facilitator. The APIs in this path will allow the facilitator to trigger an on demand sync of their sheet."
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/facilitator/signin": {
            "get": {
                "tags": [
                    "Facilitator"
                ],
                "summary": "Login using google account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [],
                "responses": {}
            }
        },
        "/facilitator/edit": {
            "patch": {
                "tags": [
                    "Facilitator"
                ],
                "summary": "Edit facilitator profile",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "parameters": [],
                "responses": {}
            }
        },
        "/job/force-sync": {
            "post": {
                "tags": [
                    "Job"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/viewer/{InstituteId}/fetch-data": {
            "get": {
                "tags": [
                    "Viewer"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "InstituteId",
                        "description": "_id of the institution to get details"
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/viewer/{participantId}/fetch-progress": {
            "get": {
                "tags": [
                    "Viewer"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "participantId",
                        "description": "email of the particular participant"
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/viewer/search-institute": {
            "get": {
                "tags": [
                    "Viewer"
                ]
            }
        },
        "/institute/fetch-institute": {
            "get": {
                "tags": [
                    "Institute"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "description": "_id of the institution to get details"
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/institute/register-institutue": {
            "post": {
                "tags": [
                    "Institute"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Send institution details to save them in db",
                        "schema": {
                            "$ref": "#/definitions/Institution"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/institute/update-institute": {
            "patch": {
                "tags": [
                    "Institute"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "description": "_id of the institution"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Send institution details to update them in db",
                        "schema": {
                            "$ref": "#/definitions/Institution"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/institute/delete-institute": {
            "delete": {
                "tags": [
                    "Institute"
                ],
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "description": "_id of the institution to get details"
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "definitions": {
        "Institution": {
            "type": "object",
            "properties": {
                "details": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "logo": {
                            "type": "string"
                        },
                        "state": {
                            "type": "string"
                        },
                        "country": {
                            "type": "string"
                        }
                    }
                },
                "sheetID": {
                    "type": "string"
                },
                "facilitator": {
                    "type": "string"
                },
                "schedule": {
                    "type": "object",
                    "properties": {
                        "hour": {
                            "type": "number",
                            "default": 17
                        },
                        "minute": {
                            "type": "number",
                            "default": 30
                        }
                    }
                },
                "isActive": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "securityDefinitions": {
        "JWT": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}